<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#090E05"
    tools:context=".ui.result.ResultActivity">

    <View
        android:id="@+id/result_image"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:alpha="0.7"
        tools:ignore="MissingConstraints" />

    <LinearLayout
        android:id="@+id/text_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="250dp"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="@id/result_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <TextView
            android:id="@+id/title_result"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginEnd="172dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="0dp"
            android:textAppearance="@style/title_1"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/subtitle_result"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginEnd="172dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="0dp"
            android:textAppearance="@style/title_2"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/report_detail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginEnd="172dp"
            android:layout_marginStart="172dp"
            android:layout_marginTop="0dp"
            android:textAppearance="@style/title_2"
            android:gravity="top"
            />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/waterme"
        android:layout_width="343dp"
        android:layout_height="47dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="34dp"
        android:layout_marginStart="34dp"
        android:background="@drawable/button"
        app:layout_constraintTop_toTopOf="@id/text_result"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">


        <TextView
            android:id="@+id/waterme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/water_me"
            android:textAppearance="@style/title_1"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_centerInParent="true" />
    </RelativeLayout>


</androidx.constraintlayout.widget.ConstraintLayout>