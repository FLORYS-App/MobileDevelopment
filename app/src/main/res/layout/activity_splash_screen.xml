<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/splash_scre"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="#090E05"
        android:clipToOutline="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/flower"
        android:layout_width="106dp"
        android:layout_height="140.49dp"
        android:layout_marginTop="146dp"
        android:src="@drawable/ic_florys"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/florys"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:gravity="top"
        android:text="@string/florys"
        android:textAppearance="@style/florys"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/flower" />
    <!--
    Font family: Reem Kufi
    Line height: 54sp
    (identical to box height)
    -->
</androidx.constraintlayout.widget.ConstraintLayout>
